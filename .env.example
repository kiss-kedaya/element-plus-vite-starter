# 微信管理系统环境变量配置文件
# 复制此文件为 .env.local 并填入实际值

# 应用基础配置
VITE_APP_TITLE=微信管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=基于 Vue 3 + Element Plus 的微信管理系统

# API 配置
# 后端 API 基础地址
VITE_API_BASE_URL=http://localhost:8059
# API 超时时间 (毫秒)
VITE_API_TIMEOUT=30000
# API 重试次数
VITE_API_RETRY_COUNT=3

# WebSocket 配置
# WebSocket 服务地址
VITE_WS_URL=ws://localhost:8059/ws
# WebSocket 重连间隔 (毫秒)
VITE_WS_RECONNECT_INTERVAL=5000
# WebSocket 最大重连次数
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# 文件上传配置
# 最大文件大小 (MB)
VITE_MAX_FILE_SIZE=50
# 支持的图片格式
VITE_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
# 支持的视频格式
VITE_SUPPORTED_VIDEO_FORMATS=mp4,webm,ogg
# 支持的文档格式
VITE_SUPPORTED_DOCUMENT_FORMATS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt

# 缓存配置
# 本地存储前缀
VITE_STORAGE_PREFIX=wechat_
# 缓存过期时间 (小时)
VITE_CACHE_EXPIRE_HOURS=24
# 最大缓存大小 (MB)
VITE_MAX_CACHE_SIZE=100

# 功能开关
# 是否启用调试模式
VITE_DEBUG_MODE=false
# 是否启用性能监控
VITE_ENABLE_PERFORMANCE_MONITOR=false
# 是否启用错误上报
VITE_ENABLE_ERROR_REPORTING=false
# 是否启用自动保存
VITE_ENABLE_AUTO_SAVE=true

# 安全配置
# JWT Token 过期时间 (小时)
VITE_TOKEN_EXPIRE_HOURS=24
# 是否启用 HTTPS
VITE_ENABLE_HTTPS=false
# CORS 允许的域名 (逗号分隔)
VITE_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# 第三方服务配置
# 腾讯云配置 (如果使用)
VITE_TENCENT_CLOUD_SECRET_ID=
VITE_TENCENT_CLOUD_SECRET_KEY=
VITE_TENCENT_CLOUD_REGION=ap-beijing

# 阿里云配置 (如果使用)
VITE_ALIYUN_ACCESS_KEY_ID=
VITE_ALIYUN_ACCESS_KEY_SECRET=
VITE_ALIYUN_REGION=cn-hangzhou

# 监控和分析
# Sentry DSN (错误监控)
VITE_SENTRY_DSN=
# Google Analytics ID
VITE_GA_ID=
# 百度统计 ID
VITE_BAIDU_ANALYTICS_ID=

# 开发环境配置
# 是否启用 Mock 数据
VITE_ENABLE_MOCK=false
# 是否显示开发工具
VITE_SHOW_DEV_TOOLS=true
# 是否启用热重载
VITE_ENABLE_HMR=true

# 生产环境配置
# 是否启用 CDN
VITE_ENABLE_CDN=false
# CDN 基础地址
VITE_CDN_BASE_URL=
# 是否启用 Gzip 压缩
VITE_ENABLE_GZIP=true
# 是否启用 Brotli 压缩
VITE_ENABLE_BROTLI=true

# 部署配置
# 部署环境 (development, staging, production)
VITE_DEPLOY_ENV=development
# 构建时间戳
VITE_BUILD_TIMESTAMP=
# Git 提交哈希
VITE_GIT_COMMIT_HASH=
# 版本号
VITE_VERSION=
